{
    "mappings": {
        "doc": {
            "properties": {
                "@timestamp"    : {"type": "date"},
                "@version"      : {"type": "keyword"},
                "category"      : {"type": "keyword"},
                "code"          : {"type": "integer"},
                "host"          : {"type": "keyword"},
                "level"         : {"type": "keyword"},
                "memory": {
                    "properties": {
                        "peak"  : {"type": "long"},
                        "usage" : {"type": "long"}
                    }
                },
                "message"       : {"type": "text"},
                "time"          : {"type": "date"},
                "type"          : {"type": "keyword"},
                "uri"           : {"type": "text"},
                "verb"          : {"type": "keyword"}
            }
        }
    },
    "index_patterns": "api-*",
    "settings": {
        "index.refresh_interval": "5s"
    },
    "version": 50001
}